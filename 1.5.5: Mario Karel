public class MarioKarel extends Karel
{
    public void run()
    {
        move();
        collectCoins();
        move();
        move();
        collectCoins();
        move();
        move();
        collectCoins();
        move();
        move();
        collectCoins();
    }    
    
    private void collectCoins()
    {
        turnLeft();
        move();
        move();
        move();
        takeBall();
        takeBall();
        turnLeft();
        turnLeft();
        move();
        move();
        move();
        turnLeft();
    } 
}
